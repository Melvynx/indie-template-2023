{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "preserve",
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "types": ["jest", "node"],
    "baseUrl": ".",
    "paths": {
      // Add all packages used in the project here
      "~/*": ["./src/*"],
      "@app-name/openai": ["../openai/src/index.ts"],
      "@app-name/prisma": ["../prisma/src/index.ts"],
      "@app-name/stripe": ["../stripe/src/index.ts"],
      "@app-name/ui": ["../ui/src/index.ts"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",
    "../../packages/web/.next/types/**/*.ts",
    "../../dist/packages/web/.next/types/**/*.ts",
    "next-env.d.ts",
    "../../nextauth.d.ts"
  ],
  "exclude": [
    "node_modules",
    "jest.config.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts"
  ]
}
